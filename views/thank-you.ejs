    <style>
        :root {
            --primary-color: #0f172a;
            --accent-color: #22c55e;
            --accent-hover: #16a34a;
            --bg-color: #f8fafc;
            --card-bg: #ffffff;
            --border-color: #e2e8f0;
            --text-main: #1e293b;
            --text-muted: #64748b;
            --radius-lg: 16px;
            --radius-md: 12px;
            --shadow: 0 4px 6px -1px rgb(0 0 0 / 0.1), 0 2px 4px -2px rgb(0 0 0 / 0.1);
            --font-family: 'Inter', system-ui, -apple-system, sans-serif;
        }

        * {
            box-sizing: border-box;
            margin: 0;
            padding: 0;
        }

        body {
            font-family: var(--font-family);
            background-color: var(--bg-color);
            color: var(--text-main);
            line-height: 1.5;
            padding-bottom: 40px;
        }

        .top-logo {
            display: flex;
            justify-content: center;
            padding: 20px 0;
        }

        .top-logo img {
            height: 60px;
            width: auto;
            object-fit: contain;
        }

        .container {
            max-width: 800px;
            margin: 0 auto;
            background: var(--card-bg);
            border-radius: var(--radius-lg);
            padding: 60px 40px;
            box-shadow: var(--shadow);
            text-align: center;
        }

        .success-icon {
            width: 80px;
            height: 80px;
            background: #dcfce7;
            color: #22c55e;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 32px;
            margin: 0 auto 32px;
        }

        .en-section {
            font-family: 'Inter', sans-serif;
        }

        .thank-you-title {
            font-size: 42px;
            font-weight: 900;
            color: #0f172a;
            margin-bottom: 16px;
            text-transform: uppercase;
            letter-spacing: -0.02em;
        }

        .thank-you-msg {
            font-size: 18px;
            color: #334155;
            max-width: 500px;
            margin: 0 auto 16px;
            font-weight: 500;
            line-height: 1.4;
        }

        .close-hint {
            font-size: 13px;
            color: #94a3b8;
            margin-bottom: 0;
        }

        .lang-divider {
            display: flex;
            align-items: center;
            text-align: center;
            margin: 40px auto;
            max-width: 550px;
        }

        .lang-divider::before,
        .lang-divider::after {
            content: '';
            flex: 1;
            border-bottom: 1px solid #f1f5f9;
        }

        .lang-divider span {
            padding: 0 15px;
            font-size: 11px;
            font-weight: 700;
            color: #cbd5e1;
            letter-spacing: 1px;
        }

        .bn-section {
            font-family: 'Hind Siliguri', sans-serif;
        }

        .bn-section .thank-you-title {
            font-size: 36px;
            letter-spacing: 0;
            margin-bottom: 20px;
            font-weight: 700;
        }

        .bn-section .thank-you-msg {
            font-size: 17px;
            line-height: 1.6;
            font-weight: 500;
        }

        .bottom-divider {
            border-bottom: 1px solid #f8fafc;
            margin: 40px auto 0;
            max-width: 600px;
        }

        .app-buttons {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 20px;
            margin-top: 40px;
        }

        .app-btn {
            background: #e11d48;
            color: white;
            padding: 16px;
            border-radius: 30px;
            text-decoration: none;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 12px;
            font-size: 15px;
            font-weight: 700;
            box-shadow: 0 10px 15px -3px rgba(225, 29, 72, 0.3);
            transition: transform 0.2s;
            text-align: center;
        }

        .app-btn:hover {
            transform: translateY(-2px);
        }

        .footer {
            text-align: center;
            margin-top: 60px;
            padding: 20px;
        }

        .footer p {
            font-size: 13px;
            color: var(--text-muted);
            margin-bottom: 20px;
        }

        .footer-links {
            display: flex;
            justify-content: center;
            gap: 15px;
            font-size: 12px;
            color: var(--text-main);
            margin-bottom: 20px;
            align-items: center;
        }

        .footer-links a {
            color: inherit;
            text-decoration: none;
        }

        #google_translate_element {
            min-height: 40px;
        }

        .goog-te-gadget {
            font-family: inherit !important;
            font-size: 14px !important;
            color: var(--text-muted) !important;
        }

        .goog-te-gadget-simple {
            background-color: white !important;
            border: 1px solid var(--border-color) !important;
            padding: 6px 12px !important;
            border-radius: 8px !important;
            cursor: pointer !important;
            display: inline-flex !important;
            align-items: center !important;
        }

        .goog-te-menu-value span {
            color: var(--text-main) !important;
            font-weight: 500 !important;
        }

        .footer-logo {
            display: flex;
            flex-direction: column;
            align-items: center;
            gap: 12px;
        }

        @media (max-width: 600px) {
            .app-buttons {
                grid-template-columns: 1fr;
            }

            .container {
                padding: 40px 20px;
            }

            .thank-you-title {
                font-size: 32px;
            }

            .bn-section .thank-you-title {
                font-size: 28px;
            }
        }
    </style>
</head>

