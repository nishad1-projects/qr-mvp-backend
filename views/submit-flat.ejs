            img.src = e.target.result;
            item.appendChild(img);
            item.appendChild(removeBtn);
          };

          reader.readAsDataURL(file);
          imageGallery.appendChild(item);
        });

        if (selectedFiles.length < 5) {
          const addMore = document.createElement('div');
          addMore.className = 'add-more-box';
          addMore.innerHTML = '+';
          addMore.onclick = () => imageInput.click();
          imageGallery.appendChild(addMore);
        }

        uploadText.textContent = selectedFiles.length > 0 ? `${selectedFiles.length} files selected` : "Click to upload (JPG, PNG - Max 5MB)";
        document.getElementById('p-images').textContent = selectedFiles.length > 0 ? `${selectedFiles.length} images selected for upload` : "No images selected";

        // Sync with actual input
        const dataTransfer = new DataTransfer();
        selectedFiles.forEach(file => dataTransfer.items.add(file));
        imageInput.files = dataTransfer.files;
      };

      const removeFile = (index) => {
        selectedFiles.splice(index, 1);
        updateGallery();
      };

      if (imageInput) {
        imageInput.addEventListener("change", function (e) {
          const files = Array.from(e.target.files);
          const maxFiles = 5;
          const maxSize = 5 * 1024 * 1024; // 5MB
          const allowedTypes = ["image/jpeg", "image/png", "image/jpg"];

          let newFiles = [...selectedFiles];

          for (let file of files) {
            if (newFiles.length >= maxFiles) {
              alert("You can upload maximum 5 images only.");
              break;
            }
            if (!allowedTypes.includes(file.type)) {
              alert(`${file.name} is not a valid image type.`);
              continue;
            }
            if (file.size > maxSize) {
              alert(`${file.name} is too large (max 5MB).`);
              continue;
            }
            newFiles.push(file);
          }

          selectedFiles = newFiles;
          this.value = ''; // Reset input first so same file can be selected again
          updateGallery(); // Then sync the programmatic files list
        });
      }

      // Preview Functionality
      const previewBtn = document.getElementById('previewBtn');
      const previewModal = document.getElementById('previewModal');
      const closeModal = document.getElementById('closeModal');
      const closeModalBtn = document.getElementById('closeModalBtn');

      const showPreview = () => {
        // Collect form data
        const name = document.querySelector('input[name="name"]').value;
        const phone = document.querySelector('input[name="phone"]').value;
        const address = document.querySelector('textarea[name="address"]').value;
        const owner = document.querySelector('input[name="ownername"]').value;
        const price = document.querySelector('input[name="price"]').value;
        const size = document.querySelector('input[name="size"]').value;
        const bedrooms = document.querySelector('select[name="bedrooms"]').value;
        const baths = document.querySelector('select[name="baths"]').value;
        const condition = document.querySelector('select[name="condition"]').value;

        // Populate modal
        document.getElementById('p-name').textContent = name || "Not provided";
        document.getElementById('p-phone').textContent = phone ? "+880 " + phone : "Not provided";
        document.getElementById('p-address').textContent = address || "Not provided";
        document.getElementById('p-owner').textContent = owner || "Not provided";
        document.getElementById('p-price').textContent = price ? price + " BDT" : "Not provided";
        document.getElementById('p-size').textContent = size ? size + " sqft" : "Not provided";
        document.getElementById('p-bedrooms').textContent = bedrooms || "Not provided";
        document.getElementById('p-baths').textContent = baths || "Not provided";
        document.getElementById('p-condition').textContent = condition || "Not provided";

        // Show modal
        previewModal.style.display = 'flex';
        document.body.style.overflow = 'hidden'; // Prevent background scrolling
      };

      const hidePreview = () => {
        previewModal.style.display = 'none';
        document.body.style.overflow = 'auto';
      };

      previewBtn.addEventListener('click', showPreview);
      closeModal.addEventListener('click', hidePreview);
      closeModalBtn.addEventListener('click', hidePreview);

      previewModal.addEventListener('click', (e) => {
        if (e.target === previewModal) hidePreview();
      });

      // Initial call to set up "+" box
      updateGallery();
    });

